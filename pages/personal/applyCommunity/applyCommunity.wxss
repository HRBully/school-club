.form {
    margin: 15rpx 30rpx;
}

.form-top {
    display: flex;
}

.top-left {
    flex: 1;
}

.top-right {
    width: 240rpx;
    padding: 20rpx 0 0 30rpx;
}

.title {
    line-height: 60rpx;
}

.inp, picker {
    padding: 5rpx 15rpx;
    border: 2rpx solid rgb(0, 0, 0);
    border-radius: 10rpx;
}

.img {
    aspect-ratio: 5 / 7;
    border: 2rpx solid rgb(0, 0, 0);
    border-radius: 10rpx;
    text-align: center;
}

.img image {
    width: 100%;
    height: 330rpx;
}
.img .title {
    line-height: 330rpx;
}

.community {
    display: flex;
    margin-bottom: 15rpx;
}

.community-title {
    padding-right: 10rpx;
}

.community picker {
    flex: 1;
}

.btn {
    margin: 50rpx auto;
    width: 50%;
    background-color: #707ae6;
    color: #fff;
    border-radius: 20rpx;
}